<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/week_day_tv"
            style="@style/warp_size15_colorwhite"
            android:text="-"/>

        <TextView
            android:id="@+id/date_tv"
            style="@style/warp_size15_colorwhite"
            android:layout_below="@id/week_day_tv"
            android:layout_marginTop="@dimen/dp_5"
            android:text="-"/>


        <TextView
            android:id="@+id/temperature_tv"
            style="@style/warp_size15_colorwhite"
            android:layout_centerHorizontal="true"
            android:text="-"/>

        <TextView
            android:id="@+id/weather_tv"
            style="@style/warp_size15_colorwhite"
            android:layout_below="@id/temperature_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:text="-"/>

        <TextView
            android:id="@+id/wind_tv1"
            style="@style/warp_size15_colorwhite"
            android:layout_alignParentRight="true"
            android:text="-"/>

        <TextView
            android:id="@+id/wind_tv2"
            style="@style/warp_size15_colorwhite"
            android:layout_alignParentRight="true"
            android:layout_below="@id/wind_tv1"
            android:layout_marginTop="@dimen/dp_5"
            android:text="-"/>

    </RelativeLayout>
</LinearLayout>